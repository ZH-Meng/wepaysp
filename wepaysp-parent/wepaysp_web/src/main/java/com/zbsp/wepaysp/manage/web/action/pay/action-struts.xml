<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
 "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="pay" namespace="/resources/pay" extends="wepaysp-manage-default">
		<!-- 微信交易明细 -->
		<action name="weixinpaydetails" class="weixinPayDetailsAction">
			<result name="weixinPayDetailsList">/resources/pay/weixinPayDetailsList.jsp</result>
		</action>
		
		<!-- 微信退款明细 -->
		<action name="weixinrefunddetails" class="weixinRefundDetailsAction">
			<result name="weixinRefundDetailsList">/resources/pay/weixinRefundDetailsList.jsp</result>
		</action>
		
		<!-- 收银台收款 -->
		<action name="payment" class="paymentAction">
			<result name="cashierDesk">/resources/pay/cashierDesk.jsp</result>
		</action>
		
	</package>
	
	<package name="appidpay" namespace="/nostate/pay" extends="global-default">
		<!-- 公众号支付 -->
		<action name="appidpay" class="appidPayAction">
			<result name="wxCallBack">/resources/pay/wxCallBack.jsp</result>
			<result name="JSPAY">/resources/pay/JSPay.jsp</result>
			<result name="jsPayResult">/resources/pay/JSPayResult.jsp</result>
		</action>
	</package>
	
	<package name="appidpaytest" namespace="/nostate/paytest" extends="global-default">
		<!-- 公众号支付测试 -->
		<action name="appidpay" class="appidPayAction">
			<result name="wxCallBack">/resources/pay/wxCallBack.jsp</result>
			<result name="JSPAY">/resources/pay/JSPayTest.jsp</result>
			<result name="jsPayResult">/resources/pay/JSPayResult.jsp</result>
		</action>
	</package>
</struts>